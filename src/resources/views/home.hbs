<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card">
                <a href="./course/{{this.slug}}">
                    <img src="{{this.thumbnail}}" class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <a href="./courses/{{this.slug}}">
                        <h5 class="card-title">
                            {{this.name}}
                        </h5>
                    </a>
                    <p class="card-text">
                        {{this.description}}
                    </p>
                    <a href="#" class="btn btn-primary">Tham gia</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>